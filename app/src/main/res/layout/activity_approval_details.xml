<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spot.app.activity.ApprovalDetailsActivity">

    <android.support.design.widget.AppBarLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/details_phone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="测试项目一"
                android:gravity="center"
                android:id="@+id/textView2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="28dp"
                android:text="申请人："
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:id="@+id/tx_text1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/tx_text1"
                android:gravity="center_vertical"
                android:text="李三"
                android:id="@+id/tx_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toRightOf="@id/tx_name"
                android:text="申请时间："
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:id="@+id/tx_text2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/tx_text2"
                android:text="2015-05-28 14:37:20"
                android:gravity="center_vertical"
                android:id="@+id/tx_dtime"/>
            
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="\u3000\u3000有谁在微信上被骗过？今天我注册了之后小号，把那个骗子加上，先跟他聊天诱导他，最后说他怎么怎么违法了。把他吓得不敢讲话了。真的好爽。他一句话都不敢回，我跟他说之前的记录都被我保存了。支持的赞我，让骗子滚粗。"
                android:gravity="center_vertical"
                android:id="@+id/tx_detail"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/up_pwd_05"
                android:gravity="center"
                android:layout_margin="20dp"
                android:text="拒绝"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/up_pwd_03"
                android:text="通过"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
