<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/approval_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/approval_true_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dsp_02"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="已审批"
            android:textColor="@drawable/approval_text_selector" />

        <RadioButton
            android:id="@+id/approval_no_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dsp_04"
            android:button="@null"
            android:gravity="center"
            android:text="未审批"
            android:textColor="@drawable/approval_text_selector" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/approval_viewpager"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    </android.support.v4.view.ViewPager>

</LinearLayout>
