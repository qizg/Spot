<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.spot.app.fragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#0EA2F8"
        android:layout_weight="0.6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_call_pressed"
            android:layout_gravity="center" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="员工信息"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:id="@+id/textView2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:text="手机号码"
                android:gravity="center_vertical|left"
                android:drawableLeft="@drawable/ps_info_22"
                android:drawablePadding="5dp"
                android:id="@+id/text_phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="15194172727"
                android:drawableRight="@drawable/ps_info_25"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|left"
                android:paddingRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="20dp"
                android:text="部门"
                android:gravity="center_vertical|left"
                android:drawableLeft="@drawable/ps_info_30"
                android:drawablePadding="10dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="工程部"
                android:drawableRight="@drawable/ps_info_35"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|left"
                android:paddingRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_dpt"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="25dp"
                android:text="职位"
                android:gravity="center_vertical|left"
                android:drawableLeft="@drawable/ps_info_34"
                android:drawablePadding="10dp"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="项目经理"
                android:drawableRight="@drawable/ps_info_35"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|left"
                android:paddingRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/text_job"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
